{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "shallow": true,
    "mount": true,
    "render": true
  },
  "rules": {
    "no-param-reassign": 0,
    "no-throw-literal": 0,
    "arrow-body-style": 0,
    "comma-dangle": ["error", "never"],
    "no-underscore-dangle": ["error", { "allow": ["_embedded", "_links", "_etag", "_root"] }],
    "linebreak-style": 0,
    "no-debugger": "error",

    "react/forbid-prop-types": 0,
    "react/function-component-definition": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-props-no-spreading": 0
  }
}
